<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TaskRow"
    android:background="@drawable/rowcolor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        >
        <CheckBox
            android:id="@+id/statusCheckBoxId"
            android:layout_width="wrap_content"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="4.4"
            android:id="@+id/taskTitleTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Task Title"
            />

        <Button
            android:id="@+id/viewTaskBtnId"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="View"
            android:textSize="7sp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/deleteTaskBtnId"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_marginRight="5sp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/viewTaskFrameLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</LinearLayout>