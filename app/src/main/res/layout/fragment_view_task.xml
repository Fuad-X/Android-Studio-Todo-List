<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ViewTaskFragment">

    <LinearLayout
        android:background="@drawable/backgroundmaincolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Title : "
                />

            <EditText
                android:id="@+id/titleTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Task Title"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Status : "
                />

            <TextView
                android:id="@+id/statusTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="To"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Deadline : "
                />

            <Button
                android:id="@+id/deadlineBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select time"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Description : "
                />

            <EditText
                android:id="@+id/descriptionTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the Description of this task"
                android:textSize="20sp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/updateBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="update"
            />

        <TextView
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Subtask"
            android:textSize="20sp"
            android:gravity="center"
            />
            <EditText
                android:id="@+id/newSubTaskTitleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="SubtaskTitle"
                />
            <Button
                android:id="@+id/addSubtaskBtnId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="+ Subtask"
                />
            <LinearLayout
                android:id="@+id/subTaskLinearLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
    </LinearLayout>

</FrameLayout>